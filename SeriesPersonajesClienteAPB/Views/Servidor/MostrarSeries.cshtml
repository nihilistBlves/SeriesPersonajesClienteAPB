@model IEnumerable<SeriesPersonajesClienteAPB.Models.Serie>

@{
    ViewData["Title"] = "MostrarSeries";
}

<h1>Mostrar Series - SERVIDOR</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" height="200px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                <a asp-action="VerPersonajesSerie" asp-route-idserie="@item.IdSerie" class="btn btn-secondary">Ver personajes SERVIDOR</a>
                <a asp-action="DetallesSerie" asp-route-id="@item.IdSerie" class="btn btn-success">Detalles SERVIDOR</a>
                <a asp-action="ModificarSerie" asp-route-id="@item.IdSerie" class="btn btn-primary">Modificar SERVIDOR</a>
            </td>
        </tr>
}
    </tbody>
</table>
